
<p><%= link_to 'Add new item', new_item_path if @owner == current_user %></p><br>

 <%= image_tag @owner.image_url, class: "user-image" %>
<h3>Listing Items from user "<%= @owner.name %>"</h3>
<%= will_paginate @items, class: "pagin" %>

